generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enum definitions
enum UserRole {
  USER
  JURY
  ADMIN
}

enum ContestStatus {
  DRAFT
  APPLICATIONS
  ACTIVE
  SUBMISSION_CLOSED
  JUDGING
  COMPLETED
  CANCELLED
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String
  username      String   @unique
  displayName   String?
  bio           String?  // 3-5 c√ºmle, max 250 karakter
  about         String?  @db.Text // 3-4 paragraf, max 1000 karakter
  avatar        String?
  tagline       String?
  portfolioLink String?
  galleryImages String[]
  
  // Contact fields
  contactEmail      String?
  contactInstagram  String?
  contactTwitter    String?
  contactBehance    String?
  contactArtStation String?
  
  role          UserRole @default(USER)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  applications  ContestApplication[]
  submissions   Submission[]
  juryAssignments JuryAssignment[]
  scores        JuryScore[]

  @@index([username])
  @@index([email])
}

model Contest {
  id                String        @id @default(cuid())
  title             String
  description       String        @db.Text
  slug              String        @unique
  
  applicationStart  DateTime
  applicationEnd    DateTime
  topicRevealAt     DateTime
  submissionEnd     DateTime
  judgingEnd        DateTime?
  
  topic             String?       @db.Text
  rules             String?       @db.Text
  prizes            String?       @db.Text
  
  maxParticipants   Int?
  requiresApproval  Boolean       @default(false)
  
  maxFileSize       Int           @default(209715200)
  allowedFormats    String[]
  
  status            ContestStatus @default(DRAFT)
  
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  
  applications      ContestApplication[]
  submissions       Submission[]
  juryAssignments   JuryAssignment[]
  
  @@index([status])
  @@index([slug])
}

model ContestApplication {
  id          String   @id @default(cuid())
  userId      String
  contestId   String
  
  status      String   @default("PENDING")
  message     String?  @db.Text
  
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  contest     Contest  @relation(fields: [contestId], references: [id], onDelete: Cascade)
  
  @@unique([userId, contestId])
  @@index([contestId, status])
}

model Submission {
  id          String   @id @default(cuid())
  userId      String
  contestId   String
  
  title       String
  description String?  @db.Text
  
  files       SubmissionFile[]
  scores      JuryScore[]
  finalScore  Float?
  rank        Int?
  
  submittedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  contest     Contest  @relation(fields: [contestId], references: [id], onDelete: Cascade)
  
  @@unique([userId, contestId])
  @@index([contestId, finalScore])
}

model SubmissionFile {
  id           String   @id @default(cuid())
  submissionId String
  
  filename     String
  originalName String
  filepath     String
  mimeType     String
  size         Int
  
  uploadedAt   DateTime @default(now())
  
  submission   Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  
  @@index([submissionId])
}

model JuryAssignment {
  id        String   @id @default(cuid())
  juryId    String
  contestId String
  
  assignedAt DateTime @default(now())
  
  jury      User     @relation(fields: [juryId], references: [id], onDelete: Cascade)
  contest   Contest  @relation(fields: [contestId], references: [id], onDelete: Cascade)
  
  @@unique([juryId, contestId])
  @@index([contestId])
}

model JuryScore {
  id           String   @id @default(cuid())
  juryId       String
  submissionId String
  
  score        Float
  comment      String?  @db.Text
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  jury         User       @relation(fields: [juryId], references: [id], onDelete: Cascade)
  submission   Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  
  @@unique([juryId, submissionId])
  @@index([submissionId])
}
