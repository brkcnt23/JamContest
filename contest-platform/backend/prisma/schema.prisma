// schema.prisma

enum UserRole {
  USER
  JURY
  ADMIN
}

enum ContestStatus {
  DRAFT           // admin oluşturdu, henüz yayınlanmadı
  APPLICATIONS    // başvurular açık
  ACTIVE          // konu yayınlandı, submission açık
  SUBMISSION_CLOSED // teslim kapandı, jüri puanlıyor
  JUDGING         // jüri değerlendirmesi devam ediyor
  COMPLETED       // sonuçlar açıklandı
  CANCELLED
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String
  username      String   @unique
  displayName   String?
  bio           String?
  avatar        String?  // profile photo path
  role          UserRole @default(USER)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relations
  applications  ContestApplication[]
  submissions   Submission[]
  juryAssignments JuryAssignment[]
  scores        JuryScore[]
  
  @@index([username])
  @@index([email])
}

model Contest {
  id                String        @id @default(cuid())
  title             String
  description       String        @db.Text
  slug              String        @unique
  
  // Timeline
  applicationStart  DateTime
  applicationEnd    DateTime
  topicRevealAt     DateTime      // konu açılma zamanı
  submissionEnd     DateTime
  judgingEnd        DateTime?
  
  // Content
  topic             String?       @db.Text  // null iken gizli
  rules             String?       @db.Text
  prizes            String?       @db.Text
  
  // Settings
  maxParticipants   Int?
  requiresApproval  Boolean       @default(false)
  
  // File constraints
  maxFileSize       Int           @default(209715200) // 200MB
  allowedFormats    String[]      // ['png','jpg','mp4','zip']
  
  status            ContestStatus @default(DRAFT)
  
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  
  // Relations
  applications      ContestApplication[]
  submissions       Submission[]
  juryAssignments   JuryAssignment[]
  
  @@index([status])
  @@index([slug])
}

model ContestApplication {
  id          String   @id @default(cuid())
  userId      String
  contestId   String
  
  status      String   @default("PENDING") // PENDING, APPROVED, REJECTED
  message     String?  @db.Text
  
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  contest     Contest  @relation(fields: [contestId], references: [id], onDelete: Cascade)
  
  @@unique([userId, contestId])
  @@index([contestId, status])
}

model Submission {
  id          String   @id @default(cuid())
  userId      String
  contestId   String
  
  title       String
  description String?  @db.Text
  
  // File metadata
  files       SubmissionFile[]
  
  // Jury evaluation
  scores      JuryScore[]
  finalScore  Float?   // average of all jury scores
  rank        Int?     // calculated rank in contest
  
  submittedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  contest     Contest  @relation(fields: [contestId], references: [id], onDelete: Cascade)
  
  @@unique([userId, contestId]) // her user contest'e 1 submission
  @@index([contestId, finalScore])
}

model SubmissionFile {
  id           String   @id @default(cuid())
  submissionId String
  
  filename     String
  originalName String
  filepath     String   // uploads/contests/{contestId}/submissions/{userId}/{submissionId}/file.ext
  mimeType     String
  size         Int
  
  uploadedAt   DateTime @default(now())
  
  submission   Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  
  @@index([submissionId])
}

model JuryAssignment {
  id        String   @id @default(cuid())
  juryId    String
  contestId String
  
  assignedAt DateTime @default(now())
  
  jury      User     @relation(fields: [juryId], references: [id], onDelete: Cascade)
  contest   Contest  @relation(fields: [contestId], references: [id], onDelete: Cascade)
  
  @@unique([juryId, contestId])
  @@index([contestId])
}

model JuryScore {
  id           String   @id @default(cuid())
  juryId       String
  submissionId String
  
  score        Float    // 0-100
  comment      String?  @db.Text
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  jury         User       @relation(fields: [juryId], references: [id], onDelete: Cascade)
  submission   Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  
  @@unique([juryId, submissionId])
  @@index([submissionId])
}